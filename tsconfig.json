{
	"compilerOptions": {
		"typeRoots": [
			"./node_modules/@types/"
		],

		"target": "es5",

		"declaration": true,

		"lib": [
			"es5",
			"scripthost",

			"es2015",
			"es2016",
			"es2017"
		],

		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true
	},

	"exclude": [
		"./node_modules/",
		"./**/*.d.ts"
	]
}
